<h3 class="ui header">{{t "forms.i-i-s-h-h-h-клиент-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фИО
      class=(if (v-get validationModel "фИО" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-клиент-e.фИО-caption")
      data-test-i-i-s-h-h-h-клиент-e-фИО=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фИО" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.адрес
      class=(if (v-get validationModel "адрес" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-клиент-e.адрес-caption")
      data-test-i-i-s-h-h-h-клиент-e-адрес=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "адрес" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерПас
      class=(if (v-get validationModel "номерПас" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-клиент-e.номерПас-caption")
      data-test-i-i-s-h-h-h-клиент-e-номерПас=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерПас" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.серияПас
      class=(if (v-get validationModel "серияПас" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-клиент-e.серияПас-caption")
      data-test-i-i-s-h-h-h-клиент-e-серияПас=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "серияПас" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.телефон
      class=(if (v-get validationModel "телефон" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-клиент-e.телефон-caption")
      data-test-i-i-s-h-h-h-клиент-e-телефон=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "телефон" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.иНН
      class=(if (v-get validationModel "иНН" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-клиент-e.иНН-caption")
      data-test-i-i-s-h-h-h-клиент-e-иНН=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "иНН" "message")}}
  </div>
</form>
