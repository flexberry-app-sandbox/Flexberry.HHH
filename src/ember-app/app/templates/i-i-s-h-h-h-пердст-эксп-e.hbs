<h3 class="ui header">{{t "forms.i-i-s-h-h-h-пердст-эксп-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.основПровед
      class=(if (v-get validationModel "основПровед" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-пердст-эксп-e.основПровед-caption")
      data-test-i-i-s-h-h-h-пердст-эксп-e-основПровед=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "основПровед" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-h-h-h-пердст-эксп-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-h-h-h-пердст-эксп-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.видЭксп
      class=(if (v-get validationModel "видЭксп" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-пердст-эксп-e.видЭксп-caption")
      data-test-i-i-s-h-h-h-пердст-эксп-e-видЭксп=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "видЭксп" "message")}}
  </div>
  <div class="field" data-test-i-i-s-h-h-h-пердст-эксп-e-резулЭксп="true">
    <label>{{t "forms.i-i-s-h-h-h-пердст-эксп-e.резулЭксп-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-h-h-h-рез-эксп")
      value=model.резулЭксп
      class=(if (v-get validationModel "резулЭксп" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "резулЭксп" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.цельЭксп
      class=(if (v-get validationModel "цельЭксп" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-пердст-эксп-e.цельЭксп-caption")
      data-test-i-i-s-h-h-h-пердст-эксп-e-цельЭксп=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "цельЭксп" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.объектЭксп
      class=(if (v-get validationModel "объектЭксп" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-пердст-эксп-e.объектЭксп-caption")
      data-test-i-i-s-h-h-h-пердст-эксп-e-объектЭксп=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "объектЭксп" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номер
      class=(if (v-get validationModel "номер" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-пердст-эксп-e.номер-caption")
      data-test-i-i-s-h-h-h-пердст-эксп-e-номер=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номер" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-h-h-h-пердст-эксп-e.заявНаСтр-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.заявНаСтр
      displayAttributeName="номер"
      autocomplete=true
      relationName="заявНаСтр"
      projection="ЗаявНаСтрL"
      title=(t "forms.i-i-s-h-h-h-пердст-эксп-e.заявНаСтр-caption")
      readonly=readonly
      componentName="заявНаСтрLookup"
      class=(if (v-get validationModel "заявНаСтр" "isInvalid") "error")
      data-test-i-i-s-h-h-h-пердст-эксп-e-заявНаСтр=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "заявНаСтр" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-h-h-h-пердст-эксп-e.сотрудники-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудники
      displayAttributeName="фИО"
      autocomplete=true
      relationName="сотрудники"
      projection="СотрудникиL"
      title=(t "forms.i-i-s-h-h-h-пердст-эксп-e.сотрудники-caption")
      readonly=readonly
      componentName="сотрудникиLookup"
      class=(if (v-get validationModel "сотрудники" "isInvalid") "error")
      data-test-i-i-s-h-h-h-пердст-эксп-e-сотрудники=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудники" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-h-h-h-пердст-эксп-e.клиент-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.клиент
      displayAttributeName="фИО"
      autocomplete=true
      relationName="клиент"
      projection="КлиентL"
      title=(t "forms.i-i-s-h-h-h-пердст-эксп-e.клиент-caption")
      readonly=readonly
      componentName="клиентLookup"
      class=(if (v-get validationModel "клиент" "isInvalid") "error")
      data-test-i-i-s-h-h-h-пердст-эксп-e-клиент=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "клиент" "message")}}
  </div>
</form>
