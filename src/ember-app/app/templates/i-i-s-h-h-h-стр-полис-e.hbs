<h3 class="ui header">{{t "forms.i-i-s-h-h-h-стр-полис-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-h-h-h-стр-полис-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-h-h-h-стр-полис-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.срокДейст
      class=(if (v-get validationModel "срокДейст" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-стр-полис-e.срокДейст-caption")
      data-test-i-i-s-h-h-h-стр-полис-e-срокДейст=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "срокДейст" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номер
      class=(if (v-get validationModel "номер" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-стр-полис-e.номер-caption")
      data-test-i-i-s-h-h-h-стр-полис-e-номер=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номер" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.террСтр
      class=(if (v-get validationModel "террСтр" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-стр-полис-e.террСтр-caption")
      data-test-i-i-s-h-h-h-стр-полис-e-террСтр=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "террСтр" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.стрТариф
      class=(if (v-get validationModel "стрТариф" "isInvalid") "error")
      label=(t "forms.i-i-s-h-h-h-стр-полис-e.стрТариф-caption")
      data-test-i-i-s-h-h-h-стр-полис-e-стрТариф=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "стрТариф" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-h-h-h-стр-полис-e.клиент-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.клиент
      displayAttributeName="фИО"
      autocomplete=true
      relationName="клиент"
      projection="КлиентL"
      title=(t "forms.i-i-s-h-h-h-стр-полис-e.клиент-caption")
      readonly=readonly
      componentName="клиентLookup"
      class=(if (v-get validationModel "клиент" "isInvalid") "error")
      data-test-i-i-s-h-h-h-стр-полис-e-клиент=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "клиент" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-h-h-h-стр-полис-e.договорСтр-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.договорСтр
      displayAttributeName="стрСлучаи"
      autocomplete=true
      relationName="договорСтр"
      projection="ДоговорСтрL"
      title=(t "forms.i-i-s-h-h-h-стр-полис-e.договорСтр-caption")
      readonly=readonly
      componentName="договорСтрLookup"
      class=(if (v-get validationModel "договорСтр" "isInvalid") "error")
      data-test-i-i-s-h-h-h-стр-полис-e-договорСтр=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "договорСтр" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-h-h-h-стр-полис-e.сотрудники-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудники
      displayAttributeName="фИО"
      autocomplete=true
      relationName="сотрудники"
      projection="СотрудникиL"
      title=(t "forms.i-i-s-h-h-h-стр-полис-e.сотрудники-caption")
      readonly=readonly
      componentName="сотрудникиLookup"
      class=(if (v-get validationModel "сотрудники" "isInvalid") "error")
      data-test-i-i-s-h-h-h-стр-полис-e-сотрудники=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудники" "message")}}
  </div>
</form>
